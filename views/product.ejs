            <a href="<%=e.secure_url%>" data-lightbox="mygallery">
              <img src="<%=e.secure_url%>" alt="<%=e.public_id%>" />
            </a>
            <%})%>
          </div>
          <div onclick="slide(`right`)" class="slidebtn">
            <i class="ri-arrow-right-s-line"></i>
          </div>
        </div>

        <div class="dets">
          <% if(user && user.role == 'admin'){%>
          <div
            onclick="displayForm()"
            style="
              display: inline;
              padding: 5px;
              cursor: pointer;
              width: 10vmax;
              text-align: center;
              background-color: black;
              border-radius: 10px;
              color: white;
            "
            id="edith"
          >
            Edit <i style="cursor: pointer" class="ri-pencil-line"></i>
          </div>
          <br />
          <a href="/admin/delete/product/<%= product._id  %>">
            <div
              style="
                display: inline;
                padding: 5px;
                cursor: pointer;
                width: 10vmax;
                text-align: center;
                background-color: rgb(255, 0, 0);
                border-radius: 10px;
                color: white;
              "
              id="edith"
            >
              Delete
            </div>
            <br />
          </a>

          <div
            style="
              padding: 5px;
              background-color: black;
              color: white;
              white-space: nowrap;
              text-align: center;
              width: 25vh;
            "
          >
            Sold : <%=product.sell%> | Stock : <%=product.stock%>
          </div>

          <form
            id="updtname"
            style="display: none"
            action="/admin/updateNaming"
            method="post"
          >
            <div
              onclick="addsize()"
              style="
                display: inline;
                cursor: pointer;
                padding: 5px;
                width: 10vmax;
                text-align: center;
                background-color: black;
                border-radius: 10px;
                color: white;
              "
              id="addsize"
            >
              Add Size
            </div>
            <button
              style="
                display: inline;
                padding: 5px;
                cursor: pointer;
                width: 10vmax;
                text-align: center;
                background-color: rgb(255, 0, 0);
                border-radius: 10px;
                color: white;
              "
              type="submit"
            >
              Update
            </button>
            <input
              style="width: 90%"
              required
              type="hidden"
              name="id"
              value="<%=product._id%>"
            />
            <input
              style="width: 90%"
              required
              type="text"
              name="name"
              placeholder="Product Name"
              value="<%=product.prdctName%>"
            />
            <select required name="Ctrg">
              <option
                style="display: none"
                selected
                value="<%=product.prdctCtrg%>"
              >
                <%=product.prdctCtrg%>
              </option>
              <option value="Hoodie">Hoodie</option>
              <option value="Oversized">Oversized Tshirt</option>
              <option value="Sweatshirt">Sweatshirt</option>
              <option value="Thrifted">Thrifted</option>
              <option value="LimitedEdition">Limited Edition</option>
            </select>
            <input
              style="width: 90%"
              type="number"
              required
              placeholder="Number Of product Sold"
              name="sell"
              value="<%=product.sell%>"
            />
            <input
              style="width: 90%"
              type="number"
              required
              placeholder="MRP"
              name="MRP"
              value="<%=product.MRP%>"
            />
            <input
              style="width: 90%"
              type="number"
              required
              placeholder="Discounted Price"
              name="price"
              value="<%=product.prdctPrice%>"
            />
            <input
              style="width: 90%"
              type="number"
              required
              placeholder="Stock"
              name="stock"
              value="<%=product.stock%>"
            />
            <input
              style="width: 90%"
              type="text"
              required
              placeholder="desc"
              name="desc"
              value="<%=product.prdctDesc%>"
            />

            <%product.sizes.forEach((e ,i)=> {%>
            <input
              type="text"
              style="width: 90%"
              id="sinp<%=i%>"
              placeholder="sizes"
              name="sizes"
              value="<%=e%>"
            /><span
              onclick="removeInp('sinp<%=i%>','sXinp<%=i%>')"
              id="sXinp<%=i%>"
              style="
                cursor: pointer;
                padding: 5px;
                width: 5vmax;
                text-align: center;
                background-color: rgb(255, 0, 0);
                border-radius: 10px;
                color: white;
              "
              >X</span
            ><br />
            <%}); %>
          </form>
          <% } %>
          <form id="addkart" action="/addToCart/<%=product._id%>" method="post">
            <h1 id="title"><%=product.prdctName%></h1>
            <div
              style="
                background-color: red;
                color: white;
                padding: 5px;
                text-align: center;
                max-width: 7vmax;
                font-size: 1vmax;
                border-radius: 5px;
              "
            >
              <%=Number((((Number(product.MRP-product.prdctPrice))/product.MRP)*100).toFixed(1))
              %>% OFF
            </div>
            <h4
              style="font-size: 1vmax; text-decoration: line-through !important"
              id="price"
            >
              ₹<%=product.MRP%>
            </h4>
            <h4 style="font-size: 2vmax" id="price">
              ₹<%=product.prdctPrice%>
            </h4>
            <input type="hidden" name="price" value="<%=product.prdctPrice%>" />
            <p id="descp"><%=product.prdctDesc%></p>
            <p><span style="color: rgb(0, 212, 0);" >Free Delivery</span> On Order Above 2000</p>
            <div class="size">
              <h5>Size</h5>
              <select name="size">
                <%product.sizes.forEach((e)=>{%>
                <option><%=e%></option>
                <%})%>
              </select>
            </div>
            <div class="size">
              <h5>Quantity</h5>
              <input name="quantity" type="number" min="1" value="1" />
            </div>
            <% if (product.stock == 0) {%>
            <button
              style="background-color: red; color: white"
              id="btn"
              disabled
            >
              <h5>Out of Stock</h5>
            </button>
            <%} else {%>
            <button id="btn">
              <h5 style="cursor: pointer !important">Add to Cart</h5>
            </button>
            <%}%>
          </form>
