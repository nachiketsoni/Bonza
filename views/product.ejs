<body>
  <% include ../views/Partial/loader.ejs %>

  <div class="main">
    <% include ../views/Partial/nav.ejs %>
    <div class="first">
      <div class="center">
        <div class="imgwrapper">
          <div onclick="slide(`left`)" class="slidebtn">
            <i class="ri-arrow-left-s-line"></i>
          </div>
          <div class="imgs">
            <%product.prdctImg.forEach((e)=>{%>
              <a href="<%=e.secure_url%>" data-lightbox="mygallery">
                <img src="<%=e.secure_url%>" alt="<%=e.public_id%>" />
              </a>
            <%})%>
          </div>
          <div onclick="slide(`right`)" class="slidebtn">
            <i class="ri-arrow-right-s-line"></i>
          </div>
        </div>

        <div class="dets">
          <form action="/addToCart/<%=product._id%>" method="post">
            <h1 id="title"><%=product.prdctName%></h1>
            <h4 id="price">â‚¹<%=product.prdctPrice%></h4>
            <input type="hidden" name="price" value="<%=product.prdctPrice%>" />
            <p id="descp"><%=product.prdctDesc%></p>
            <div class="size">
              <h5>Size</h5>
              <select name="size">
                <option>S</option>
                <option>M</option>
                <option>L</option>
              </select>
            </div>
            <div class="size">
              <h5>Quantity</h5>
              <input name="quantity" type="number" min="1" value="1" />
            </div>
            <button id="btn">
              <h5>Add to Cart</h5>
            </button>
          </form>
          <div class="size">
            <a href="https://web.whatsapp.com/"
              ><i class="ri-whatsapp-fill"></i></a
            ><a href="https://www.instagram.com/"
              ><i class="ri-instagram-fill"></i></a
            ><a href="https://www.facebook.com/"
              ><i class="ri-facebook-fill"></i
            ></a>
          </div>
        </div>
      </div>
    </div>
    <div class="second">
      <div class="desc">
        <div class="head">
          <h4 class="active" onclick="openBody(this, 0)">Product Details</h4>
          <h4 onclick="openBody(this , 1)">Size Chart</h4>
        </div>
        <div onscroll="scrolly()" class="body">
          <div class="section" id="bakchodi">
            <ul>
              <%product.prdctFeatures.forEach(e => { %>
              <li><%=e%></li>
            
              <% }) %>
            </ul>
          </div>

          <div class="section" id="sizeChart">
            <h2>Size Chart</h2>
            <div class="cover">
              <div class="cat">
                <h3>Size Guide</h3>
                <h4>Chest Size</h4>
                <h4>Waist Size</h4>
                <h4>Hips Size</h4>
              </div>
              <div class="s">
                <h3>S</h3>
                <h4>34</h4>
                <h4>34</h4>
                <h4>34</h4>
              </div>
              <div class="s">
                <h3>M</h3>
                <h4>34</h4>
                <h4>34</h4>
                <h4>34</h4>
              </div>
              <div class="s">
                <h3>L</h3>
                <h4>34</h4>
                <h4>34</h4>
                <h4>34</h4>
              </div>
              <div class="s">
                <h3>XL</h3>
                <h4>34</h4>
                <h4>34</h4>
                <h4>34</h4>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <!-- <div id="vid">
      https://www.youtube.com/watch?v=WNeLUngb-Xg&list=RDMMWNeLUngb-Xg&start_radio=1 -->
