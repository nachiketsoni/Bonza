    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css"
      rel="stylesheet"
    />

    <!-- Libraries Stylesheet -->

    <!-- Customized Bootstrap Stylesheet -->
    <link href="../stylesheets/bootstrap.min.css" rel="stylesheet" />

    <!-- Template Stylesheet -->
    <link href="../stylesheets/admin.css" rel="stylesheet" />
  </head>

  <body>
    <% include ../views/Partial/loader.ejs %>

    <div class="container-fluid position-relative d-flex p-0">
      <!-- Spinner Start -->
      <div
        id="spinner"
        class="show bg-dark position-fixed translate-middle w-100 vh-100 top-50 start-50 d-flex align-items-center justify-content-center"
      >
        <div
          class="spinner-border text-primary"
          style="width: 3rem; height: 3rem"
          role="status"
        >
          <span class="sr-only">Loading...</span>
        </div>
      </div>
      <!-- Spinner End -->

      <!-- Sidebar Start -->
      <div class="sidebar pe-4 pb-3">
        <nav class="navbar bg-secondary navbar-dark">
          <a href="index.html" class="navbar-brand mx-4 mb-3">
            <h3 class="text-primary">
              <i class="fa fa-user-edit me-2"></i>Admin Panel
            </h3>
          </a>
          <div class="d-flex align-items-center ms-4 mb-4">
            <div class="position-relative">
              <img
                class="rounded-circle"
                src="img/user.jpg"
                alt=""
                style="width: 40px; height: 40px"
              />
              <div
                class="bg-success rounded-circle border border-2 border-white position-absolute end-0 bottom-0 p-1"
              ></div>
            </div>
            <div class="ms-3">
              <h6 class="mb-0">Jhon Doe</h6>
              <span>Admin</span>
            </div>
          </div>
          <div class="navbar-nav w-100">
            <a href="/admin" class="nav-item nav-link active"
              ><i class="fa fa-tachometer-alt me-2"></i>Dashboard</a
            >
           
            <a href="/admin/allOrders" class="nav-item nav-link"
              ><i class="fa fa-th me-2"></i>All Orders</a
            >
            <a href="/admin/allUsers" class="nav-item nav-link"
              ><i class="fa fa-keyboard me-2"></i>All Users</a
            >
          
           
        </nav>
      </div>
      <!-- Sidebar End -->

      <!-- Content Start -->
      <div class="content">
       
        <div class="col-sm-12 col-xl-6 mt-1 mx-1">
          <form
            action="/admin/productUpload"
            id="prdctForm"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="bg-secondary rounded h-100 p-4">
              <h6 class="mb-4">Add Product</h6>
              <div class="form-floating mb-3">
                <select
                  name="prdctCtrg"
                  class="form-select"
                  id="floatingSelect"
                  aria-label="Floating label select example"
                >
                  <option value="Hoodie">Hoodie</option>
                  <option value="Oversized">Oversized Tshirt</option>
                  <option value="Sweatshirt">Sweatshirt</option>
                  <option value="Thrifted">Thrifted</option>
                  <option value="LimitedEdition">Limited Edition</option>
                </select>
                <label for="floatingSelect">*Category</label>
              </div>
             
             
              <div class="form-floating mb-3">
                <input
                  name="prdctName"
                  type="text"
                  class="form-control"
                  id="floatingInput"
                  required
                />
                <label for="floatingInput">*Product Name</label>
              </div>
              <div class="form-floating mb-3">
                <input
                  name="stock"
                  type="text"
                  class="form-control"
                  id="floatingInput"
                  required
                />
                <label for="floatingInput">*Product Stock</label>
              </div>
              <div class="form-floating mb-3">
                <input
                  name="sell"
                  type="text"
                  class="form-control"
                  id="floatingInput"
                  required

                />
                <label for="floatingInput">Number Of Product Sold (optional)</label>
              </div>
              <div class="form-floating mb-3">
                <input
                  name="prdctPrice"
                  type="number"
                  class="form-control"
                  id="floatingPassword"
                />
                <label for="floatingPassword">*Product Price</label>
              </div>
              <div class="form-floating mb-3">
                <input
                  name="mrp"
                  type="number"
                  class="form-control"
                  id="floatingPassword"
                />
                <label for="floatingPassword">*MRP</label>
              </div>
              <div class="form-floating mb-3">
                <input
                  name="delivery"
                  type="number"
                  class="form-control"
                  id="floatingPassword"
                />
                <label for="floatingPassword">*Delivery Charges</label>
              </div>
              <!-- <div class="form-floating mb-3">
                <input
                  name="prdctVideo"
                  type="text"
                  class="form-control"
                  id="floatingPassword"
                />
                <label for="floatingPassword">Product Video</label>
              </div> -->
              <!-- <div class="mb-3">
                <small>Thumbnail</small>
                <input
                  name="thumbnail"
                  class="form-control bg-dark prdctImg"
                  type="file"
                />
              </div> -->

              <div class="mb-3">
                <small>*Images</small>

                <input
                  name="prdctImg"
                  class="form-control bg-dark prdctImg"
                  type="file"
                  id="formFileMultiple"
                  multiple
                  required

                />
              </div>

              <div class="form-floating">
                <textarea
                  name="prdctDesc"
                  class="form-control"
                  placeholder="Leave a comment here"
                  id="floatingTextarea"
                  style="height: 100px"
                  required

                ></textarea>
                <label for="floatingTextarea">*Description</label>
              </div>
              <label  for="floatingTextarea mt-5 d-flex justify-content-between">*Features
                <div id="addInp " onclick="addInp('highlight')" class="btn btn-primary  mx-4 mt-2">
                    Add Input
                  </div>
              </label>
                <div id="highlight" class="form-floating">
                  <div class="d-flex mt-1">
                    <input
                      name="prdctFeatures"
                      class="form-control"
                      placeholder="Add a highlight here"
                      id="floatingTextarea"
                  required

                    />
                    <div
                      onclick="removeInp(this)"
                      class="d-flex text-center justify-content-center align-items-center btn btn-primary h-5"
                    >
                      X
                    </div>
                  </div>
                </div>
              <label  for="floatingTextarea mt-5 d-flex justify-content-between">*Sizes
                <div id="addInp " onclick="addInp('size')" class="btn btn-primary  mx-4 mt-2">
                    Add Input
                  </div>
              </label>
                <div id="size" class="form-floating">
                  <div class="d-flex mt-1">
                    <input
                      name="size"
                      class="form-control"
                      placeholder="Write Size here"
                      id="floatingTextarea"
                  required

                    />
                    <div
                      onclick="removeInp(this)"
                      class="d-flex text-center justify-content-center align-items-center btn btn-primary h-5"
                    >
                      X
                    </div>
                  </div>
                </div>
                
              <button type="submit" id="submit" class="btn btn-primary mt-2">
                Submit
              </button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0/dist/js/bootstrap.bundle.min.js"></script>

    <script src="../javascripts/main.js"></script>
    <script>
      const addInp = (jagah) => {
        html = `
        <div  class="d-flex mt-1">
                  <input
                    
                    name=${jagah=='highlight'?'prdctFeatures':'size'}
                    class="form-control"
                    placeholder="Write ${jagah=='highlight'?'highlight':'size'} here"
                    id="floatingTextarea"
                    required
                  />
                  <div
                    onclick="removeInp(this)"
                    class="d-flex text-center justify-content-center align-items-center btn btn-primary h-5"
                  >
                    X
                  </div>
                </div>
           `;
           if (jagah == "highlight") {
             document
               .querySelector("#highlight")
               .insertAdjacentHTML("beforeend", html);
            
           } else {
            document
               .querySelector("#size")
               .insertAdjacentHTML("beforeend", html);
            
           }
      };
      const removeInp = (e) => {
        console.log(e.parentNode);
        document.querySelector("#highlight").removeChild(e.parentNode);
      };
      let submit = document.querySelector("#submit");
      let prdctForm = document.querySelector("#prdctForm");
      var prdctImg = document.querySelector(".prdctImg");
      prdctForm.addEventListener("submit", (e) => {
        if (prdctImg.files.length < 10 && prdctImg.files.length >= 2) {

          document.querySelector("#spinner").style = `opacity:0.5; visibility:visible`;
        } else {
          e.preventDefault();
          alert("more then 2 and less then 10 photos  are allowed to upload");
        }
      });
    </script>
  </body>
</html>
