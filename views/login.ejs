<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
  </head>
  <link rel="stylesheet" href="../stylesheets/login.css">
  <link rel="stylesheet" href="../stylesheets/Partial/header.css">
  <body>

    <section>
      <div class="container">
        <div class="user signinBx">
          <div class="imgBx"><img src="https://images.unsplash.com/photo-1543087903-1ac2ec7aa8c5?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1798&q=80" alt="" /></div>
          <div class="formBx">
            <form action="/login"  method="POST">
              <h2>Sign In</h2>
              <input class="inp" required style="cursor: text;"  type="text" name="email" placeholder="Email Address" />
              <input class="inp" required style="cursor: text;"  type="password" name="password" placeholder="Password" />
              <input class="inp" style="cursor: pointer;" required  type="submit" value="Login" />

              <p class="signup">
                <a style="font-size: .85vmax ; cursor: pointer;"  href="/forgot">Forgot Password</a> <br><br><br>
                Don't have an account ?
                <a style="cursor: pointer;" onclick="toggleForm();">Sign Up.</a>
              </p>
            </form>
            <a id="G-btn" style="cursor: pointer;" href="/google/auth">
             <img style="cursor: pointer;" src="https://upload.wikimedia.org/wikipedia/commons/0/09/IOS_Google_icon.png?20150923131459" alt=""> Continue with Google
            </a>
          </div>
        </div>
        <div class="user signupBx">
          <div class="formBx">
            <form id="formSub" onsubmit="return checkPassword(this)" action="/register" method="POST">
              <h2>Create an account</h2>
              <input class="inp" required style="cursor: text;" type="text" name="name" placeholder="Name" />
              <input class="inp" required style="cursor: text;" type="number" name="number" placeholder="Contact No." />
              <input class="inp" required style="cursor: text;" type="email" name="email" placeholder="Email Address" />
              <select class="inp" required  name="gender" aria-label="Floating label select example">
                            <option value="Male">Male</option>
                            <option value="Female">Female</option>
                            <option value="Others">Others</option>
                </select>
              <input class="inp" id="fp" required style="cursor: text;"  type="password" name="password1" placeholder="Create Password" />
              <input class="inp" id="sp" required style="cursor: text;" type="password" name="password" placeholder="Confirm Password" />
              <button style="cursor: pointer;" class="inp">Sign Up</button>
              <p class="signup">
                Already have an account ?
                <a style="cursor: pointer;" onclick="toggleForm()">Sign in</a>
              </p>
            </form>
            <a id="G-btn" style="cursor: pointer;" href="/google/auth">
              <img style="cursor: pointer;" src="https://upload.wikimedia.org/wikipedia/commons/0/09/IOS_Google_icon.png?20150923131459" alt=""> Continue with Google
             </a>
          </div>
          <div class="imgBx"><img src="https://images.unsplash.com/photo-1567098260939-5d9cee055592?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1888&q=80" alt="" /></div>
        </div>
      </div>
    </section>




  <script>
    const toggleForm = () => {
    const container = document.querySelector('.container');
    container.classList.toggle('active');
  };
  

   
    function checkPassword(form) {
                password1 = form.password1.value;
                password = form.password.value;
  
                if (password1 == '')
                    alert ("Please enter Password");
                      
                else if (password == '')
                    alert ("Please enter confirm password");
                      
                else if (password1 != password) {
                    alert ("\nPassword did not match: Please try again...")
                    return false;
                }
  
                else{
                    return true;
                }
            }
    
    

  </script>
       
      </body>
</html>